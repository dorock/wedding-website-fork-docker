FROM node:latest

# musl-dev is required for the node-sass binary from https://github.com/sass/node-sass/issues/1589
RUN apt update
RUN apt upgrade -y 
RUN npm install
RUN npm install -g gulp
RUN npm install gulp

# WebPorts
EXPOSE 8080

# COPY ./docker-entrypoint.sh /
COPY . /app
WORKDIR /app
ENTRYPOINT ["/app/docker-entrypoint.sh"]
